<h1>Editing Book</h1>
<%= form_with model: @book, method: :patch do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>

  </br><%= f.submit 'Update Book' %>
  
  </br><%= link_to "Show", book_path(@book.id) %>
       <%= link_to "Back", books_path %>
<% end %>