<h1>Books</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>New book</h1>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>error
    <ul>
      <% @book.errors.full_messages.each do |messaage| %>
        <li><%= messaage %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>

  </br><%= f.submit 'Create Book' %>
<% end %>